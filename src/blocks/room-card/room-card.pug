include ../room-number/room-number
include rating/rating

mixin room-card({list})
  each item in list
    .room-card
      img.room-card__img(src=require(`../../images/${item.link}`))
      .room-card__info
        .room-card__price-row
          +room-number(item.number, item.numberLarge, item.isLuxury, item.price)
        .room-card__rating-row
          .room-card__cell
            +rating(item.rating)
          .room-card__cell
            p.room-card__comments= item.comments
            p.room-card__comments--text Отзывов