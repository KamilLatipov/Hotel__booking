include ../footer-nav/footer-nav

mixin footer({nav})
  .footer__wrapper
    .footer__best
      img.footer__img(src=require("../images/Logo.png") width="106" height="40")
      p.footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
    nav.footer-nav
      +footer-nav(nav)
    .footer__subscribe
      h3.footer__title Подписка
      p.footer__text Получайте специальные предложения и новости сервиса
      form.footer__form
        input(type="email" name="email" placeholder="Email").main-footer__mail
  .footer__bottom
    p.footer__copyright
      Copyright © 2018 Toxin отель. Все права защищены.
        .footer__social
